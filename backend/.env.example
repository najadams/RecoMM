# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bookclub

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# OpenAI Configuration (Required for AI-powered recommendations)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Google Books API (Optional - for enhanced book data)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Recommendation System Configuration
RECOMMENDATION_CACHE_TTL=3600
MAX_RECOMMENDATIONS_PER_REQUEST=20
MIN_READING_HISTORY_FOR_AI=3

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log